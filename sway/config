set $mod Mod1
set $left h
set $down j
set $up k
set $right l
set $term foot
set $menu fuzzel

output DP-2 mode 1920x1080@143.855Hz position 0,0
# output DP-2 mode 1920x1080@119.982Hz position 0,0
output * allow_tearing yes
output * max_render_time off

input * {
    pointer_accel 0
    accel_profile flat

    repeat_delay 200
    repeat_rate 60
}

gaps inner 12
gaps outer 0

# exec swaybg -c '#113344' >/dev/null 2>&1 &
exec waypaper --restore
exec kanshi
# exec swayidle -w \
# 	timeout 300 'swaylock -f -c 000000' \
