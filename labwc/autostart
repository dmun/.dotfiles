# wallpaper
# swaybg -c '#113344' >/dev/null 2>&1 &
waypaper --restore

# outputs
kanshi >/dev/null 2>&1 &

# statusbar
waybar >/dev/null 2>&1 &

# notifications
mako >/dev/null 2>&1 &

# lock screen
swayidle -w \
	timeout 300 'swaylock -f -c 000000' \
	timeout 600 'wlopm --off \*' \
	resume 'wlopm --on \*' \
	before-sleep 'swaylock -f -c 000000' >/dev/null 2>&1 &
