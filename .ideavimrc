set sneak
set surround
set NERDTree
set number
set relativenumber
set scrolloff=0
set clipboard+=unnamed
set showcmd
set scrolloff=5
set highlightedyank
set hlsearch
set ignorecase smartcase
set incsearch
let sneak#s_next=1

let mapleader = " "

nnoremap Y y$

nnoremap <ESC> <ESC>:nohl<CR>

nmap <leader>td <Action>(ToggleDistractionFreeMode)

" Surround
" nmap Q ysiw
" nmap M ysiW

" Save
nnoremap <C-s> :w!<CR>
inoremap <C-s> <C-o>:w!<CR>

" Font size
nnoremap <C-=> :action EditorIncreaseFontSize<CR>
nnoremap <C--> :action EditorDecreaseFontSize<CR>

" Navigating buffers
nnoremap <A-n> :action NextTab<CR>
nnoremap <A-p> :action PreviousTab<CR>
nnoremap <A-w> :action CloseEditor<CR>
nnoremap <C-o> :action Back<CR>
nnoremap <C-i> :action Forward<CR>

" Split/close window
nnoremap <A-v> <C-w>v
nnoremap <A-s> <C-w>s
nnoremap <A-q> :action CloseEditor<CR>
nnoremap <leader><leader>

" Navigating windows
nnoremap <A-j> <C-w>j
nnoremap <A-k> <C-w>k
nnoremap <A-h> <C-w>h
nnoremap <A-l> <C-w>l

