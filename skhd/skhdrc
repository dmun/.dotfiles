#
# wm independent hotkeys
#

# open terminal
alt - return : /Applications/kitty.app/Contents/MacOS/kitty --single-instance -d ~

#
# yabai hotkeys
#

# window actions
# alt - e : yabai -m window --toggle split
alt - f : yabai -m window --toggle zoom-fullscreen
alt - d : yabai -m window --toggle float;\
          yabai -m window --grid 4:4:1:1:2:2
shift + alt - f : yabai -m window --toggle native-fullscreen

# desktop actions
alt - g : yabai -m space --toggle gap;\
          yabai -m space --toggle padding

# tree manipulations
alt - r : yabai -m space --rotate 90
alt - x : yabai -m space --mirror x-axis
alt - y : yabai -m space --mirror y-axis
alt - b : yabai -m space --balance

# focus window
alt - h : yabai -m window --focus west
alt - j : yabai -m window --focus next
alt - k : yabai -m window --focus prev
alt - l : yabai -m window --focus east

# move window
alt + shift - h : yabai -m window --swap west || $(yabai -m window --display west; yabai -m display --focus west)
alt + shift - j : yabai -m window --swap next || $(yabai -m window --display next; yabai -m display --focus next)
alt + shift - k : yabai -m window --swap prev || $(yabai -m window --display prev; yabai -m display --focus prev)
alt + shift - l : yabai -m window --swap east || $(yabai -m window --display east; yabai -m display --focus east)

# resize windows based on position
alt + ctrl - h : yabai -m window --resize left:-50:0 || yabai -m window --resize right:-50:0
alt + ctrl - j : yabai -m window --resize bottom:0:50 || yabai -m window --resize top:0:50
alt + ctrl - k : yabai -m window --resize top:0:-50 || yabai -m window --resize bottom:0:-50
alt + ctrl - l : yabai -m window --resize right:50:0 || yabai -m window --resize left:50:0

# focus space
alt - 1 : yabai -m space --focus 1
alt - 2 : yabai -m space --focus 2
alt - 3 : yabai -m space --focus 3
alt - 4 : yabai -m space --focus 4
alt - 5 : yabai -m space --focus 5
alt - 6 : yabai -m space --focus 6
alt - 7 : yabai -m space --focus 7
alt - 8 : yabai -m space --focus 8
alt - 9 : yabai -m space --focus 9
alt - 0 : yabai -m space --focus 10

# move window to space
alt + shift - 1 : yabai -m window --space 1
alt + shift - 2 : yabai -m window --space 2
alt + shift - 3 : yabai -m window --space 3
alt + shift - 4 : yabai -m window --space 4
alt + shift - 5 : yabai -m window --space 5
alt + shift - 6 : yabai -m window --space 6
alt + shift - 7 : yabai -m window --space 7
alt + shift - 8 : yabai -m window --space 8
alt + shift - 9 : yabai -m window --space 9
alt + shift - 0 : yabai -m window --space 10
