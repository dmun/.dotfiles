#
# wm independent hotkeys
#

# terminal emulator
super + {_,shift + }Return
	{kitty,$HOME/.dotfiles/scratch.sh}

# program launcher
super + space
	rofi -show drun -show-icons

# emoji selector
super + Period
	rofi -show emoji

# make sxhkd reload its configuration files:
super + Escape
	pkill -USR1 -x sxhkd

# brightness
XF86MonBrightness{Up,Down}
	light -{A,U} 10

# pulseaudio volume
XF86Audio{Raise,Lower}Volume
	pactl set-sink-volume @DEFAULT_SINK@ {+,-}10%

XF86AudioMute
	pactl set-sink-mute @DEFAULT_SINK@ toggle

# open system applications
super + {u,b,c}
	kitty -e {pulsemixer,bluetoothctl,colorpicker}

super + {e}
	nautilus

# screenshots with scrot/xclip
{_,shift + , ctrl + }Print
	scrot {_,-s,-u} ~/Pictures/scrot/ss.png -e 'xclip -selection clipboard -t image/png -i $f'

#
# bspwm hotkeys
#

# quit/restart bspwm
super + alt + {q,r}
	bspc {quit,wm -r}

# close and kill
super + {_, shift + } q
	bspc node -{c,k}

# alternate between the tiled and monocle layout
super + m
	bspc desktop -l next

# send the newest marked node to the newest preselected node
super + y
	bspc node newest.marked.local -n newest.!automatic.local

# swap the current node and the biggest window
super + g
	bspc node -s biggest.window

#
# state/flags
#

# set the window state
super + {d,shift + d,s,f}
	bspc node -t {tiled,pseudo_tiled,floating,fullscreen}

super + a
    bspc node -g sticky

# set the node flags
super + ctrl + {m,x,y,z}
	bspc node -g {marked,locked,sticky,private}

#
# focus/swap
#

# focus the node in the given direction
super + {_,shift + }{h,j,k,l}
	bspc node -{f,s} {west,south,north,east}.local

# focus the node for the given path jump
# super + {p,b,comma,period}
# 	bspc node -f @{parent,brother,first,second}

# focus the next/previous window in the current desktop
super + {_,shift + }Tab
	bspc node -f {next,prev}.local.!hidden.window

# focus the next/previous desktop in the current monitor
super + {p,n}
	bspc desktop -f {prev,next}.local

# focus or send to the given desktop
super + {_,shift + }{1-9,0}
	bspc {desktop -f,node -d} '^{1-9,10}'

#
# preselect
#

# preselect the direction
super + alt + {h,j,k,l}
	bspc node -p {west,south,north,east}

# preselect the ratio
super + alt + {1-9}
	bspc node -o 0.{1-9}

# cancel the preselection for the focused node
super + alt + space
	bspc node -p cancel

# cancel the preselection for the focused desktop
super + alt + shift + space
	bspc query -N -d | xargs -I id -n 1 bspc node id -p cancel

#
# move/resize
#

# Smart resize, will grow or shrink depending on location.
# Will always grow for floating nodes.
super + ctrl + {h,j,k,l}
	n=50; \
	{ d1=left;   d2=right;  dx=-$n; dy=0;   \
	, d1=bottom; d2=top;    dx=0;   dy=$n;  \
	, d1=top;    d2=bottom; dx=0;   dy=-$n; \
	, d1=right;  d2=left;   dx=$n;  dy=0;   \
	} \
	bspc node --resize $d1 $dx $dy || bspc node --resize $d2 $dx $dy
